<SideBox@BoxLayout>:
    orientation: 'horizontal'
    padding: [5]

<SideCount@Label>:
    size_hint: None, None
    size: 120, self.parent.height - self.parent.parent.spacing

<DateBox@BoxLayout>:
    orientation: 'vertical'
    padding: [5]
    size_hint: None, None
    size: 100, self.parent.height - self.parent.padding[0] - self.padding[0]

<MainScreen>:
    FloatLayout:
        BoxLayout:
            size_hint: None, None
            size: 100, 100
            pos: self.parent.width/2,self.parent.height/2
            Button:
                text: 'Increase'
                on_press:
                    root.increase()
                    app.load_buttons()
        BoxLayout:
            id: pops
            orientation: 'vertical'
            padding: [10]
            spacing: 10
            size_hint: None, None
            size: 250, len(self.children)*50
            pos: 0, self.parent.height - self.height
            canvas:
                Color:
                    rgba: (200,0,0,0.5)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [0,0,30,0]
            SideBox:
                id: babies
                Label:
                    text: 'Babies:'
                SideCount:
                    id: babies_count
                    text: str(app.stats['pops']['babies'])
            SideBox:
                id: children
                Label:
                    text: 'Children:'
                SideCount:
                    id: children_count
                    text: str(app.stats['pops']['children'])
            SideBox:
                id: teens
                Label:
                    text: 'Teens:'
                SideCount:
                    id: teens_count
                    text: str(app.stats['pops']['teens'])
            SideBox:
                id: settlers
                Label:
                    text: 'Settlers:'
                SideCount:
                    id: settlers_count
                    text: str(app.stats['pops']['settlers'])

        BoxLayout:
            id: status
            orientation: 'horizontal'
            padding: [10]
            spacing: 10
            size_hint: None, None
            size: len(self.children)*200, 100
            pos: self.parent.width/2-self.width/2, self.parent.height-self.height
            canvas:
                Color:
                    rgba: (200,0,0,0.5)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [0,0,30,30]
            BoxLayout:
                orientation: 'vertical'
                padding: [5]
                Label:
                    text: 'Planet Habitability'
                Label:
                    id: planet_habitability
                    text: str(app.stats['planet_habitability'])
            DateBox:
                Label:
                    text: 'Year'
                Label:
                    id: year
                    text: str(app.stats['year'])
            DateBox:
                Label:
                    text: 'Day'
                Label:
                    id: day
                    text: str(app.stats['day'])

        BoxLayout:
            id: modules
            orientation: 'vertical'
            padding: [10]
            spacing: 10
            size_hint: None, None
            size: 350, len(self.children)*50
            pos: self.parent.width-self.width, self.parent.height-self.height
            canvas:
                Color:
                    rgba: (200,0,0,0.5)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [0,0,0,30]
            SideBox:
                Label:
                    text: 'Habitation:'
                SideCount:
                    id: habitation
                    text: str(app.stats['base_modules']['habitation'])
            SideBox:
                Label:
                    text: 'Greenhouse:'
                SideCount:
                    id: greenhouse
                    text: str(app.stats['base_modules']['greenhouse'])


<LoadingScreen>:
    FloatLayout:
        BoxLayout:
            size_hint: None, None
            size: 100, 100
            pos: self.parent.width/2,self.parent.height/2
            Button:
                text: 'Go to Main'
                on_press:
                    root.load_buttons()
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'main'
